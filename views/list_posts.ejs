<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/public/stylesheets/common.css">
        <link rel="stylesheet" type="text/css" href="/public/stylesheets/list-posts.css">
        <script src="https://kit.fontawesome.com/3c33110502.js" crossorigin="anonymous"></script>
        <title>List Posts</title>
    </head>

    <body>
        <div class="op-result-wrapper">
            <p class="op-result-text">
                Operation Result Placeholder
            </p>
        </div>
        <table id="list-posts-table">
            <tr>
                <td>Post Title</td>
                <td colspan="3">Operations</td>
            </tr>
            <% for (var i = 0; i < posts.length; i++) { %>
                <tr>
                    <td><%- posts[i].post_title %></td>
                    <td class="icon" onclick="location.href='/post?id=<%- posts[i].post_id %>'"><i class="fas fa-eye"></i></td>
                    <td class="icon" onclick="location.href='/update_post?id=<%- posts[i].post_id %>'"><i class="fas fa-edit"></td>
                    <td class="icon"><i class="fas fa-trash"></i></td>
                </tr>
            <% } %>
        </table>
    </body>
    <script src="/socket.io/socket.io.js"></script>
</html>